<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>bin</id>
	<formats>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<outputDirectory>/lib</outputDirectory>
		</dependencySet>
	</dependencySets>
	<moduleSets>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<sources>
				<includeModuleDirectory>false</includeModuleDirectory>
				<fileSets>
					<fileSet>
						<outputDirectory>/config</outputDirectory>
						<directory>src/main/resources/config</directory>
						<includes>
							<include>*.properties</include>
						</includes>
					</fileSet>
					<fileSet>
						<outputDirectory>/language</outputDirectory>
						<directory>src/main/resources/language</directory>
						<includes>
							<include>*.lang</include>
						</includes>
					</fileSet>
					<fileSet>
						<outputDirectory>/template</outputDirectory>
						<directory>src/main/resources/template</directory>
						<includes>
							<include>*.jpg</include>
							<include>*.xtmpl</include>
						</includes>
					</fileSet>
					<fileSet>
						<outputDirectory>/icons</outputDirectory>
						<directory>src/main/resources/icons</directory>
						<includes>
							<include>*.png</include>
							<include>*.bmp</include>
						</includes>
					</fileSet>
					<fileSet>
						<outputDirectory>/bin</outputDirectory>
						<directory>src/main/resources/bin</directory>
						<includes>
							<include>*.ico</include>
							<include>*.png</include>
						</includes>
					</fileSet>
					<fileSet>
						<outputDirectory>/results</outputDirectory>
						<directory>src/main/resources/results</directory>
						<includes>
							<include>*.csv</include>
						</includes>
					</fileSet>
					<fileSet>
						<outputDirectory>/license</outputDirectory>
						<directory>src/main/resources/license</directory>
						<includes>
							<include>*.txt</include>
						</includes>
					</fileSet>
					<fileSet>
						<outputDirectory>/</outputDirectory>
						<directory>src/main/resources</directory>
						<includes>
							<include>*.sh</include>
							<include>CHANGELOG</include>
							<include>README</include>
						</includes>
						<excludes>
							<exclude>install</exclude>
						</excludes>
					</fileSet>
				</fileSets>
			</sources>
			<binaries>
				<outputDirectory>/lib</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
	</moduleSets>
	<fileSets>
		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory>/</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>

